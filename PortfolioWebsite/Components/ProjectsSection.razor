@using PortfolioWebsite.Models
@using PortfolioWebsite.Services
@inject PortfolioDataService PortfolioDataService

<div class="projects-section">
    <div class="projects-header hero-animate">
        <h1 class="projects-title">Featured Projects</h1>
        <p class="projects-subtitle">Showcasing my software engineering expertise through innovative solutions</p>
    </div>

    <div class="projects-grid">
        @foreach (var project in _projects)
        {
            <div class="project-card hero-animate" style="animation-delay: @(0.2 + (_projects.IndexOf(project) * 0.1))s">
                <div class="project-image">
                    <img src="@project.ImageUrl" alt="@project.Title" />
                    <div class="project-overlay">
                        <div class="project-links">
                            @if (!string.IsNullOrEmpty(project.GitHubUrl))
                            {
                                <a href="@project.GitHubUrl" target="_blank" class="project-link github-link">
                                    <i class="mdi mdi-github"></i>
                                    <span>View Code</span>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(project.LiveDemoUrl))
                            {
                                <a href="@project.LiveDemoUrl" target="_blank" class="project-link demo-link">
                                    <i class="mdi mdi-play-circle"></i>
                                    <span>Live Demo</span>
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <div class="project-content">
                    <div class="project-category">@project.Category</div>
                    <h3 class="project-title">@project.Title</h3>
                    <p class="project-description">@project.Description</p>
                    
                    <div class="project-technologies">
                        @foreach (var tech in project.Technologies.Take(4))
                        {
                            <span class="tech-tag">@tech</span>
                        }
                        @if (project.Technologies.Count > 4)
                        {
                            <span class="tech-tag more-tag">+@(project.Technologies.Count - 4) more</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="projects-footer hero-animate" style="animation-delay: 0.6s">
        <p class="projects-footer-text">
            More projects coming soon! I'm constantly working on new ideas and technologies.
        </p>
        <div class="github-cta">
            <a href="https://github.com/marcushenriquesj" target="_blank" class="github-button">
                <i class="mdi mdi-github"></i>
                <span>View All Projects on GitHub</span>
            </a>
        </div>
    </div>
</div>

@code {
    private List<Project> _projects = new();

    protected override void OnInitialized()
    {
        _projects = PortfolioDataService.GetPortfolioData().Projects;
    }
}


