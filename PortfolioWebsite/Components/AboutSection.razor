@using PortfolioWebsite.Models

<MudContainer MaxWidth="MaxWidth.Large" Class="section-container" id="about">
    <MudText Typo="Typo.h3" Class="section-title text-center mb-6">
        About Me
    </MudText>
    
    <MudGrid>
        <MudItem xs="12" md="6">
            <MudPaper Elevation="3" Class="about-card pa-6">
                <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">
                    Who I Am
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    @PortfolioData.About
                </MudText>
                
                <MudDivider Class="my-4" />
                
                <MudText Typo="Typo.h6" Class="mb-3">Contact Information</MudText>
                <div class="contact-info">
                    <div class="contact-item">
                        <MudIcon Icon="@Icons.Material.Filled.Email" Color="Color.Primary" Class="mr-2" />
                        <MudText Typo="Typo.body2">@PortfolioData.Email</MudText>
                    </div>
                    <div class="contact-item">
                        <MudIcon Icon="@Icons.Material.Filled.Phone" Color="Color.Primary" Class="mr-2" />
                        <MudText Typo="Typo.body2">@PortfolioData.Phone</MudText>
                    </div>
                    <div class="contact-item">
                        <MudIcon Icon="@Icons.Material.Filled.LocationOn" Color="Color.Primary" Class="mr-2" />
                        <MudText Typo="Typo.body2">@PortfolioData.Location</MudText>
                    </div>
                </div>
            </MudPaper>
        </MudItem>
        
        <MudItem xs="12" md="6">
            <MudPaper Elevation="3" Class="about-card pa-6">
                <MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">
                    What I Do
                </MudText>
                
                <div class="services-grid">
                    <div class="service-item">
                        <MudIcon Icon="@Icons.Material.Filled.Web" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Class="mt-2">Web Development</MudText>
                        <MudText Typo="Typo.body2" Class="text-center">
                            Building responsive and modern web applications
                        </MudText>
                    </div>
                    
                    <div class="service-item">
                        <MudIcon Icon="@Icons.Material.Filled.PhoneAndroid" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Class="mt-2">Mobile Development</MudText>
                        <MudText Typo="Typo.body2" Class="text-center">
                            Creating cross-platform mobile applications
                        </MudText>
                    </div>
                    
                    <div class="service-item">
                        <MudIcon Icon="@Icons.Material.Filled.Cloud" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Class="mt-2">Cloud Solutions</MudText>
                        <MudText Typo="Typo.body2" Class="text-center">
                            Deploying and managing cloud infrastructure
                        </MudText>
                    </div>
                    
                    <div class="service-item">
                        <MudIcon Icon="@Icons.Material.Filled.Settings" Color="Color.Primary" Size="Size.Large" />
                        <MudText Typo="Typo.h6" Class="mt-2">DevOps</MudText>
                        <MudText Typo="Typo.body2" Class="text-center">
                            Implementing CI/CD pipelines and automation
                        </MudText>
                    </div>
                </div>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    [Parameter] public PortfolioData PortfolioData { get; set; } = new();
}


